@model List<CategoryTypeDTO>
@{ if (Model.Count > 0)
    {

        <div class="author-area-pro" id="list_categoryType_container" style="margin-top:25px">
            <div class="container-fluid">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        var categoryTypeName = item.Name.Length > 30 ? item.Name.Substring(0, 30) + "..." : item.Name;
                        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12" style="margin-bottom:25px;">
                            <div class="personal-info-wrap">
                                <div class="widget-text-box">
                                    <h4 style="word-wrap: break-word !important;">@categoryTypeName.ToUpper()</h4>
                                    <ul style="color:white;">
                                        <li style="word-wrap: break-word !important;"><b>Eklenme Tarihi : </b>@item.InsertedAt</li>
                                        <li style="word-wrap: break-word !important;"><b>Güncellenme Tarihi : </b>@item.UpdatedAt</li>
                                    </ul>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="text-right like-love-list" style="margin-top:10px;margin-bottom:20px;">
                                                <button data-toggle="tooltip" data-placement="left" title="Sil" onclick="RemoveCategoryType(@item.Id)" class="pd-setting-ed btn btn-danger" data-original-title="Trash" style="float:right;"><i class="fas fa-trash-alt"></i></button>
                                                <button data-toggle="tooltip" data-placement="left" title="Düzenle" onclick="EditCategoryTypeView(@item.Id)" class="pd-setting-ed btn btn-success" style="float:right;"><i class="fas fa-edit"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <p style="margin-left:30px;color:white;">Kaynak kaydı bulunmamaktadır.</p>
    }
}