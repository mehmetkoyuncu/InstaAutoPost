@model List<SourceModel>
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-header">
                <img class="img-fluid img-thumbnail" width="100px;" src="@item.Image" />
                @if (string.IsNullOrEmpty(item.Image))
                {
                    <a onclick="UpdateSource(@item.Id, '@item.Name')"> <i class="fas fa-edit float-end"></i></a>
                }
                else
                {
                    <a onclick="UpdateSourceWithImage(@item.Id, '@item.Name', '@item.Image')"> <i class="fas fa-edit float-end"></i></a>
                }

            </div>
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">Son Güncellenme Tarihi :<strong> @item.UpdatedAt.ToShortDateString()</strong></p>
                <a href="@item.Url"  onclick="AddCategory(@item.Id)" class="btn btn-primary">Kategori Ekle</a>
                <a href="@item.Url" id="@item.Id" onclick="RemoveSource(this)" class="btn btn-danger">Sil</a>
            </div>
        </div>
    </div>
    }
</div>







      