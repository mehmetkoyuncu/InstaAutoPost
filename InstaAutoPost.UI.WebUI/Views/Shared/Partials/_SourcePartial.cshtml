@model List<SourceDTO>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-header">
                    <img class="img-fluid img-thumbnail" width="100px;" src="@item.Image" />
                    @if (string.IsNullOrEmpty(item.Image))
                    {
                        <a onclick="UpdateSource(@item.Id, '@item.Name')"> <i class="fas fa-edit float-end"></i></a>
                    }
                    else
                    {
                        <a onclick="UpdateSourceWithImage(@item.Id, '@item.Name', '@item.Image')"> <i class="fas fa-edit float-end"></i></a>
                    }

                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Son Güncellenme Tarihi :<strong> @item.UpdatedAt.ToShortDateString()</strong></p>
                    <a  asp-controller="Category" asp-action="GetCategories" asp-route-id="@item.Id" class="btn btn-primary">Kategorileri Getir</a>
                    <a onclick="RemoveSource(@item.Id)" class="btn btn-danger">Sil</a>
                </div>
            </div>
        </div>
    }
</div>



